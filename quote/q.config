# Telegram Quote Bot 配置文件
# 请根据实际情况修改以下配置

[API]
# Quote API 服务地址
quote_api_url = https://quote.git.llc/generate
# 官方API地址（备用）
# quote_api_url = https://bot.lyo.su/quote/generate

[S3]
# Cloudflare R2 Object Storage 配置
bucket_name = 
public_url = 
access_key = 
secret_key = 
endpoint_url = 
region = auto

[QUOTE]
# 引用生成默认设置
background_color = #1b1429
width = 512
height = 768
scale = 2
emoji_brand = apple
format = webp

[MEDIA]
# 媒体处理设置
max_file_size = 10485760
# 最大文件大小（字节）10MB = 10485760
supported_formats = jpg,jpeg,png,webp,gif
enable_compression = true
